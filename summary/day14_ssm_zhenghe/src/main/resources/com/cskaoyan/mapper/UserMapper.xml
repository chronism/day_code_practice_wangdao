<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这个是映射XML对应的JavaBean Mapper-->
<mapper namespace="com.cskaoyan.mapper.UserMapper">

    <select id="queryUserById" resultType="com.cskaoyan.domain.User">
        select username,password from user_data where id=#{id}
    </select>
</mapper>