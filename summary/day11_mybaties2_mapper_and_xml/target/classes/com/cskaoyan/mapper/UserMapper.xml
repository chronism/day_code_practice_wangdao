<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cskaoyan.mapper.UserMapper">
    <!--我返回值类型是什么，取出就封装什么-->
    <select id="selectUserNameById" resultType="com.cskaoyan.domain.User">
        select username,hobbies from user where id = #{id}
    </select>

    <select id="selectUserById" resultType="user">
        select id,username,password,hobbies,userDetail from user where id=#{param1}
    </select>
</mapper>